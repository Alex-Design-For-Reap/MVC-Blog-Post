{{!-- <!DOCTYPE html> --}}
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My fist Blog</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body class="bg-gray-100 text-gray-900">

    <header class="bg-white shadow">
      <div class="container mx-auto flex flex-wrap items-center p-5 md:flex-row justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            Tech Blog
          </h1>
        </div>
        <div>
        </div class:"w-full md:block md:w-auto align-right">
          <nav class="border-gray-200 justify-center">
            
            {{#if logged_in}}
            <a
              href="/"
              class="mr-5 hover:text-gray-900 cursor-pointer hover:text-white hover:bg-blue-600"
            >Home</a>
            <a 
            href="/dashboard"
            class="mr-5 hover:text-gray-900 cursor-pointer hover:bg-blue-600">Dashboard</a>
            
            <a 
            href="/logout"
            id="logout"
            class="mr-5 hover:text-gray-900 cursor-pointer">Logout</a>
            {{else}}
            <a
              href="/"
              class="mr-5 hover:text-gray-900 cursor-pointer "
            >Home</a>
            <a 
            href="/login"
              class="mr-5 hover:text-gray-900 cursor-pointer"
            >Login</a>
            {{/if}}
          </nav>
        </div>
      </div>
    </header>
    <main>
      {{{body}}}
    </main>
    <footer class="bg-white shadow mt-8">
      <div class="container mx-auto py-6 px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-gray-600">&copy; 2024 Tech Blog. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
